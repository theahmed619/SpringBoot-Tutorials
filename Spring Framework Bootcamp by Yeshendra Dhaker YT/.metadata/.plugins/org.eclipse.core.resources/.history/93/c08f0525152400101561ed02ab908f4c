			int userPartySelect=scanner.nextInt();
			switch(userPartySelect) {
			case 1:{
				
				break;
			}
			case 2:{
				
				break;
			}
			case 3:{
				
				break;
			}
			}
			
			break;
		}
		case 2:{
			break;
		}
		}
